
<div class="rental">

  <br><br>

  <label for="new-title-0">Title:</label>

  <Input @id="new-title-1" placeholder={{this.rental.title}} @value={{this.rental.title}} @key-up={{action "updateTitle"}} />

  <label for="new-owner">Owner: {{this.rental.owner}}</label>

  {{input
    type="text"
    id="new-owner"
    placeholder=this.rental.owner
    value=this.rental.owner
  }}

  <br><br>

  <label for="new-title">Title:</label>

  {{input
    type="text"
    id="new-title"
    placeholder="What is an amazing rental?"
    value=this.rental.title
  }}

  <br><br>

  <label for="new-title">City:</label>

  {{input
    type="text"
    id="new-city"
    placeholder="What is an amazing city?"
    value=this.rental.city
  }}

  <br><br>

  <label for="new-title">Category:</label>

  {{input
    type="text"
    id="new-category"
    placeholder="What is a category rental?"
    value=this.rental.category
  }}

  <br><br>

  <label for="new-isbn">Image:</label>

  {{input
    type="text"
    id="new-image"
    placeholder="Put Image url here"
    value=this.rental.image
  }}

  <br><br>

  <label for="new-bedrooms">Bedrooms:</label>

  {{input
    type="number"
    id="new-bedrooms"
    placeholder=this.rental.bedrooms
    hint="Input Bedrooms number here"
    value=this.rental.bedrooms
  }}

  <br><br>

  <label for="new-city">Description:</label>

  {{textarea
    cols="80"
    rows="6"
    id="new-description"
    placeholder="Here the story begins..."
    value=this.rental.description
  }}

</div>

